<div class="navbar-header">
  <% if current_user.is_admin? %>
    <%= link_to t("admin"), home_admin_path, class: "navbar-brand" %>
  <% end %>
  <% if current_user.is_manager? %>
    <%= link_to t("manager"), home_admin_path, class: "navbar-brand" %>
  <% end %>
</div>

<button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
  <span class="sr-only">Toggle navigation</span>
  <span class="icon-bar"></span>
  <span class="icon-bar"></span>
  <span class="icon-bar"></span>
</button>

<ul class="nav navbar-nav navbar-left navbar-top-links">
  <li>
    <%= link_to root_path do %>
      <i class='fa fa-home fa-fw'></i> <%= t "website" %>
    <% end %>
  </li>
</ul>

<ul class="nav navbar-right navbar-top-links">
  <li class="dropdown">
    <a class="dropdown-toggle" data-toggle="dropdown" href="#">
      <i class="fa fa-user fa-fw"></i>
      <%= current_user.name %>
      <b class="caret"></b>
    </a>
    <ul class="dropdown-menu dropdown-user">
      <li>
        <%= link_to user_path current_user do %>
          <i class="fa fa-user fa-fw"></i> <%= t "header.user_profile" %>
        <% end %>
      </li>
      <li class="divider"></li>
      <li>
        <%= link_to logout_path, method: :delete do %>
          <i class="fa fa-sign-out fa-fw"></i> <%= t "header.logout" %>
        <% end %>
      </li>
    </ul>
  </li>
</ul>
