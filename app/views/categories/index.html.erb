<div class="row">
  <div class="col-md-12">
    <%= provide :title, t("category.list_categories") %>
    <h1><%= t "category.list_categories" %></h1>
    <%= link_to new_category_path, class: "btn btn-primary" do %>
      <i class="fa fa-plus" aria-hidden="true"></i><span><%= t "store.add_new_category" %></span>
    <% end %>
    <table class="table-hover table list-users">
      <tr>
        <th><%= t "category.Name" %></th>
        <th><%= t "category.Store" %></th>
        <th><%= t "category.Action" %></th>
      </tr>
      <% @categories.each do |category| %>
      <tr>
        <td><%= category.name %></td>
        <td><%= category.store_name %></td>
        <td>
          <%= link_to edit_category_path(category) do %>
            <i class="fa fa-pencil fa-fw fa-update"></i>
          <% end %>
          <%= link_to category, method: :delete, data:{ confirm: t("category.are_you_sure")} do %>
            <i class="fa fa-trash-o fa-fw fa-delete"></i>
          <% end %>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
