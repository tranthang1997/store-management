<% provide :title, t("auth.login") %>
<h1><%= t "auth.login" %></h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for :session, url: login_path do |f| %>

      <%= f.label :email %>
      <%= f.email_field :email, class: "form-control" %>

      <%= f.label :password %>
      <%= link_to t("auth.forgot_password_link"), "#new_password_reset_path" %>
      <%= f.password_field :password, class: "form-control" %>

      <%= f.label :remember_me, class: "checkbox inline" do %>
        <%= f.check_box :remember_me %>
        <span><%= t "auth.remember_me_on_this_computer" %></span>
      <% end %>

      <%= f.submit t("auth.login"), class: "btn btn-primary" %>
    <% end %>

    <p><%= t "auth.new_user" %> <%= link_to t("auth.sign_up_now"), "#signup_path" %></p>
  </div>
</div>
